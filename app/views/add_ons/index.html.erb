<p id="notice"><%= notice %></p>

<h1>Add Ons</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Title</th>
      <th>Description</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @add_ons.each do |add_on| %>
      <tr>
        <td><%= add_on.game_id %></td>
        <td><%= add_on.title %></td>
        <td><%= add_on.description %></td>
        <td><%= add_on.cost %></td>
        <td><%= link_to 'Show', add_on %></td>
        <td><%= link_to 'Edit', edit_add_on_path(add_on) %></td>
        <td><%= link_to 'Destroy', add_on, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

